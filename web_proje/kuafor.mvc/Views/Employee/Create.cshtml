@model kuafor.mvc.Models.Employee

<h2>Yeni Çalışan Ekle</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Ad Soyad</label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Uzmanlık</label>
        <input asp-for="Expertise" class="form-control" />
    </div>
    <div class="form-group">
        <label>Çalışma Saatleri</label>
        <input asp-for="Availability" class="form-control" />
    </div>
    <div class="form-group">
        <label>Salon</label>
        <select asp-for="SalonId" class="form-control" asp-items="ViewBag.Salons"></select>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
<a asp-action="Index" class="btn btn-secondary">Geri</a>
