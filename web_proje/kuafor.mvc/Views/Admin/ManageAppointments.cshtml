<h2>Randevu Yönetimi</h2>
<a asp-controller="Appointment" asp-action="Create" class="btn btn-primary">Yeni Randevu Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>Müşteri</th>
            <th>Çalışan</th>
            <th>Hizmet</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in ViewBag.Appointments as IEnumerable<kuafor.mvc.Models.Appointment>)
        {
            <tr>
                <td>@appointment.Customer.FullName</td>
                <td>@appointment.Employee.FullName</td>
                <td>@appointment.Service.Name</td>
                <td>@appointment.StartTime</td>
                <td>@appointment.EndTime</td>
                <td>@appointment.Status</td>
                <td>
                    <a asp-controller="Appointment" asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-controller="Appointment" asp-action="Delete" asp-route-id="@appointment.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
